---
import Hknap from "../components/Hknap.astro"
import "../styles/global.css";
---
<div class="header">
  <header class="site-header">
      <div class="container">
          <h1>AskExperts</h1>
          <nav>
              <ul>
                  <li><a href="/index">Home</a></li>
                  <li><a href="/casestudy">Case Study</a></li>
                  <li><a href="/employee">Team</a></li>
                  <li><a href="/about">About</a></li>
              </ul>
          </nav>
          <Hknap />
      </div>
  </header>
</div>


<style>
.header {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  width: 100%; 
  box-sizing: border-box; 
background-color: var(--Primary-03);

  .site-header {
    display: flex;
    width: 100%; 

    .container {
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      width: 100%; 
      padding: 1.5%;

      h1{
          font-size: var(--step-1);
          color: var(--Primary-05);
        }

        p{
          font-size: var(--step-0);
        }
    }

    nav {
      ul {
        list-style-type: none; 
        padding: 0;
        margin: 0;

        li {
          display: inline; 
          margin-right: 15px; 
        }
      }

      a {
        text-decoration: none; 
        color: var(--Primary-05);

        &:hover {
          text-decoration: underline; 
        }
      }
    }
  }
}
</style>
