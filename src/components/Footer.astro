<style>  
body{
    background-color: var(--Primary-03);
    padding: 3%;
    display: grid;
  grid-template-rows: auto 2fr auto 2fr auto;
  grid-template-columns:
    [full-start] 1fr [content-start] minmax(0, 65ch) [content-end] 1fr [full-end];
    gap: 1rem;
}

 hr {
        border: none;
        height: 2px;
        background-color: var(--Primary-05);
        width: 100%; 
    }

.container, .container-1 {
    display: flex;
    justify-content: space-around;

    h1{
        font-size: var(--step-0);
    }

     h2{
        font-size: var(--step--1);
        text-align: center;
    }
}

.footer{
    background-color: var(--Primary-03);
    color: var(--Primary-05);
    grid-column: full;
  display: grid;
  grid-template-columns: subgrid;
  
  > * {
    grid-column: content;
  }
}


.full-bleed {
  grid-column: full;
  display: grid;
  grid-template-columns: subgrid;
  
  > * {
    grid-column: content;
  }
  
}

* {
  box-sizing: border-box;
}

