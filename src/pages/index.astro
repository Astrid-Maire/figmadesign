---
import "../styles/global.css";

import ScrollingContainer from "../components/ScrollingContainer.astro";
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro";
import Newsletter from "../components/Newsletter.astro";
import Forside from "../components/Forside.astro";

import { scrollingCard } from "../data/scrolling-card.js";
---
<Header />
<Forside />

<meta name="generator" content={Astro.generator} />
<ScrollingContainer scrollingCard={scrollingCard} />

Newsletter
 <Footer />


<style>
     main {
    padding-block: 4rem; 
  }
  

  section {
    display: grid;
    grid: auto / [full-start] 1fr [content] min(65ch, 100% - 2rem) 1fr [full-end];
    gap: 1rem;

  
    > * {
      grid-column: content;
    }

    ul {
      grid-column: full;
      padding-inline: max(1rem, 50% - min(65ch, 100% - 2rem) / 2); 
    }
  }
</style>
